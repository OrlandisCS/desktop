{
	"name": "msp-desk",
	"productName": "mps desk windows",
	"version": "1.0.0",
	"description": "This app has been created by Orlandis Cuevas",
	"author": "OrlandisDev",
	"main": "src/app.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "electron-forge start",
		"package": "electron-forge package",
		"make": "electron-forge make",
		"electron-dev": "nodemon --exec electron .",
		"package-win": "electron-packager . --overwrite --platform=win32 --icon=src/assets/MS-favicon.ico --prune=true --out=builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"msp-desk\"",
		"create-installer-win": "node createinstaller.js"
	},
	"config": {
		"forge": {
			"packagerConfig": {
				"icon": "./src/assets/favicon.ico",
				"loadingGif": "./src/assets/loading.gif"
			},
			"rebuildConfig": {},
			"makers": [
				{
					"name": "@electron-forge/maker-squirrel",
					"config": {
						"name": "msp-window"
					}
				},
				{
					"name": "@electron-forge/maker-zip",
					"platforms": [
						"darwin"
					]
				},
				{
					"name": "@electron-forge/maker-deb",
					"config": {
						"name": "msp-linux"
					}
				},
				{
					"name": "@electron-forge/maker-rpm",
					"config": {
						"name": "msp-rpm"
					}
				}
			],
			"buildIdentifier": "msp-app"
		}
	},
	"keywords": [],
	"license": "ISC",
	"devDependencies": {
		"@electron-forge/cli": "^6.0.5",
		"@electron-forge/maker-deb": "^6.0.5",
		"@electron-forge/maker-rpm": "^6.0.5",
		"@electron-forge/maker-squirrel": "^6.0.5",
		"@electron-forge/maker-zip": "^6.0.5",
		"electron": "^23.1.3",
		"electron-packager": "^17.1.1",
		"electron-rebuild": "^3.2.9",
		"electron-winstaller": "^5.1.0"
	},
	"dependencies": {
		"colorette": "^2.0.19",
		"date-fns": "^2.29.3",
		"dotenv": "^16.0.3",
		"electron-alert": "^0.1.20",
		"electron-squirrel-startup": "^1.0.0",
		"excel4node": "^1.8.0",
		"log4js": "^6.9.1",
		"mongoose": "^7.0.1",
		"nfc-pcsc": "^0.8.1",
		"nodemailer": "^6.9.1",
		"uuid": "^9.0.0"
	}
}
